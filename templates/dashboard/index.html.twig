{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    {% include '_includes/_header.html.twig' %}
    {# start app-container #}
    <div class="app-container">
        {% include '_includes/_sidebar.html.twig' %}
        {# begin app-main #}
        <div class="app-main" id="main">
            {# begin container-fluid #}
            <div class="container-fluid">
                {# begin row #}
                <div class="row">
                    <div class="col-md-12 m-b-30">
                        {# begin page-title #}
                        <div class="d-block d-lg-flex flex-nowrap align-items-center">
                            <div class="page-title mr-4 pr-4 border-right">
                                <h1>Dashboard</h1>
                            </div>
                            <div class="ml-auto d-flex align-items-center">
                                <nav>
                                    <ol class="breadcrumb p-0 m-b-0">
                                        <li class="breadcrumb-item">
                                            <a href="{{ path('app_dashboard') }}"><i class="ti ti-home"></i></a>
                                        </li>
                                        <li class="breadcrumb-item">
                                            Dashboard
                                        </li>
                                        <li class="breadcrumb-item active text-primary" aria-current="page">Home</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                        {# end page-title #}
                    </div>
                </div>
                {# end row #}
                {# begin row #}
                <div class="row">
                    <div class="col-sm-12">
                        {# start main content #}
                        <div class="card card-statistics">
                            <div class="card-header d-flex justify-content-between">
                                <div class="card-heading">
                                    <h4 class="card-title">Site activity</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <p>Some content in here...</p>
                            </div>
                        </div>
                        {# end main content #}
                    </div>
                </div>
                {# end row #}
            </div>
            {# end container-fluid #}
        </div>
        {# end app-main #}
    </div>
    {# end app-container #}
    {% include '_includes/_footer.html.twig' %}
{% endblock %}
